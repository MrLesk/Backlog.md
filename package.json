{
	"name": "backlog.md",
	"version": "0.1.0",
	"module": "src/index.ts",
	"type": "module",
	"bin": {
		"backlog": "./cli/index.js"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "1.2.15",
		"husky": "9.1.7",
		"lint-staged": "16.1.0"
	},
	"scripts": {
		"test": "bun test",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check .",
		"prepare": "husky",
		"build": "node scripts/build.js",
		"build:js": "bun build src/cli.ts --outdir cli --target node",
		"build:exe": "bun build src/cli.ts --compile --outfile cli/backlog",
		"cli": "bun src/cli.ts"
	},
	"lint-staged": {
		"*.{ts,js,json}": ["biome check --write --files-ignore-unknown=true"],
		"src/**/*.{ts,js}": ["biome check --write --files-ignore-unknown=true"]
	},
	"dependencies": {
		"commander": "14.0.0",
		"gray-matter": "4.0.3",
		"prompts": "2.4.2"
	}
}
